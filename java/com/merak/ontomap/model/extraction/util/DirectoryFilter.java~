// Package
///////////////
package com.merak.ontomap.model.extraction.util;

// Imports
///////////////
import java.io.*;

// Public Class
///////////////
public class DirectoryFilter extends FileFilter {

 //~ Attributes ////////////////////////////////////////////////////////////////
 //*****************************************************************************
 //~ Constructors /////////////////////////////////////////////////////////////
 //****************************************************************************
 //~ Methods ///////////////////////////////////////////////////////////////////
 //*****************************************************************************
 public boolean accept(File file) {

   return file.isDirectory();

 }
 //*****************************************************************************

}
